<div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-success shadow h-80">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                        {{ item._id|upper }}
                        <small class="mt-3 mb-0 text-sm">
                            ({{ item.amount|number_format(8) }})
                        </small>
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                        {{ item.totalUSD|number_format(2) }}$ / {{ item.totalEUR|number_format(2) }}&euro;
                    </div>
                    <p class="mt-3 mb-0 text-sm">
                        <span class="text-success">
                            {% if item.inOrder > 0 %}
                                <i class="fa fa-arrow-up"></i>
                                {{ item.inOrder|number_format(2) }}
                            {% else %}
                                <strong>0</strong>
                            {% endif %}
                        </span>
                        <span><small>in orders</small></span>
                    </p>
                </div>
                <div class="col-auto">
                    <i class="fas fa-coins fa-2x text-gray-300"></i>
                </div>
            </div>
        </div>
    </div>
</div>
