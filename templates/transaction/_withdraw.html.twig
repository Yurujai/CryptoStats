<div class="col-lg-6 col-12 mb-4">
    <div class="card border-left-success shadow h-80" style="min-height: 400px;">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col-12 mr-2">
                    <div class="text-xs text-success text-uppercase mb-2">
                        {{ "Add withdraw"|trans }}
                    </div>
                </div>
                <div class="col-lg-6 text-center">
                    <h4 class="text-xs text-success text-uppercase mb-4">
                        {{ "Total"|trans }}
                    </h4>
                    <h2 class="font-weight-bold text-grey-800">
                        ${{ withdrawTotal|number_format(2) }}
                    </h2>
                </div>
                <div class="col-lg-6 col-12 mr-0 text-center">
                    <div class="no-gutters align-items-center">
                        {{ form_start(withdrawForm)}}
                        <div class="withdraw-form-input">
                            {{ form_widget(withdrawForm.amount) }}
                        </div>
                        <div class="withdraw-form-input">
                            {{ form_widget(withdrawForm.symbol) }}
                        </div>
                        <div class="withdraw-form-input">
                            {{ form_widget(withdrawForm.moved_to) }}
                        </div>
                        <div class="withdraw-form-input">
                            {{ form_widget(withdrawForm.date) }}
                        </div>
                        <div class="withdraw-form-input">
                            <button type="submit" class="btn btn-block btn-success">{{ "Add"|trans }}</button>
                        </div>
                        {{ form_end(withdrawForm) }}
                    </div>
                </div>
                <div class="col-12">
                    <table class="table table-md table-responsive table-striped mt-4">
                        <thead>
                        <tr>
                            <td>{{ "NÂº"|trans }}</td>
                            <td>{{ "Amount"|trans }}</td>
                            <td>{{ "Symbol"|trans }}</td>
                            <td>{{ "Moved to"|trans }}</td>
                            <td>{{ "Added"|trans }}</td>
                            <td>&nbsp;</td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for withdraw in withdraws %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ withdraw.amount|number_format(2) }}</td>
                                <td>{{ withdraw.symbol|upper }}</td>
                                <td>{{ withdraw.movedTo }}</td>
                                <td>{{ withdraw.added|date('Y-m-d') }}</td>
                                <td>
                                    <a title="{{ "Remove"|trans }}" href="{{ path('withdraw_remove_amount', {'withdraw': withdraw.id}) }}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
